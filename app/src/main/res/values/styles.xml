<resources>
    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:actionButtonStyle">@style/homeButtonStyle</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/theme_default_primary</item>
    </style>

    <!--  application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
    </style>

    <style name="ActivityTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="SlidingTextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="LaunchTheme" parent="Theme.AppCompat">
        <item name="android:background">@drawable/bg_luanch</item>
    </style>

    <style name="buttonStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@color/theme_default_primary_dark</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="backgroundStyle">
        <item name="android:background">@color/theme_default_primary</item>
    </style>

    <style name="SwipeBackLayout">
        <item name="edge_size">200dip</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>

    <style name="ActivityAnimation" parent="android:Animation.Translucent">
        <item name="android:windowEnterAnimation">@anim/anim_slide_in_from_right</item>
        <item name="android:windowExitAnimation">@anim/anim_slide_out_from_right</item>
    </style>

    <style name="homeButtonStyle" parent="Widget.AppCompat.Light.ActionButton">
        <item name="spinBars">true</item>
        <item name="android:color">@android:color/white</item>
    </style>

</resources>
