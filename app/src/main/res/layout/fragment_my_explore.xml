<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center|top"
    android:orientation="vertical"
    android:padding="8dp">
    <LinearLayout
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_marginRight="8dp"
            android:id="@+id/tv_portal"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="红岩门户"
            android:gravity="start"
            android:padding="16dp"
            android:background="#689F38"
            android:textColor="@android:color/white"/>
        <TextView
            android:layout_marginLeft="8dp"
            android:id="@+id/tv_activity_board"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="活动看板"
            android:gravity="start"
            android:padding="16dp"
            android:background="#EF6C00"
            android:textColor="@android:color/white"/>
        </LinearLayout>

    <LinearLayout
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_marginRight="8dp"
            android:id="@+id/tv_map"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="重邮地图"
            android:gravity="start"
            android:padding="16dp"
            android:background="#ED3B3B"
            android:textColor="@android:color/white"/>
        <TextView
            android:layout_marginLeft="8dp"
            android:id="@+id/tv_around"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="周边美食"
            android:gravity="start"
            android:padding="16dp"
            android:background="#689F38"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_marginRight="8dp"
            android:id="@+id/tv_eat"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="吃什么"
            android:gravity="start"
            android:padding="16dp"
            android:background="#536DFE"
            android:textColor="@android:color/white"/>
        <TextView
            android:layout_marginLeft="8dp"
            android:id="@+id/tv_community"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="幽幽黄桷兰BBS"
            android:gravity="start"
            android:padding="16dp"
            android:background="#039BE5"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_class_talk"
            android:layout_marginRight="8dp"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="班级聊"
            android:gravity="start"
            android:padding="16dp"
            android:background="@color/theme_default_primary"
            android:textColor="@android:color/white"/>
        <TextView
            android:layout_marginLeft="8dp"
            android:id="@+id/tv_secret"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="晒秘密"
            android:layout_weight="1"
            android:gravity="start"
            android:padding="16dp"
            android:background="#689F38"
            android:textColor="@android:color/white"/>
    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_explore"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:layout_margin="16dp"
        android:background="@android:color/white"/>

</LinearLayout>
